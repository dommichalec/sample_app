<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/errors', object: @user %>

      <%= f.label "First name: " %>
      <%= f.text_field :first_name, require: true, autofocus: true, class: 'form-control' %>

      <%= f.label "Last name: " %>
      <%= f.text_field :last_name, require: true, class: 'form-control' %>

      <%= f.label "Email address: " %>
      <%= f.text_field :email, require: true, class: 'form-control' %>

      <%= f.label "Password: " %>
      <%= f.password_field :password, require: true, class: 'form-control' %>

      <%= f.label "Password confirmation: " %>
      <%= f.password_field :password_confirmation, require: true, class: 'form-control' %>

      <%= f.submit "Create my account", class: 'btn btn-primary'%>
    <% end %>
  </div>
</div>
